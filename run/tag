#!/usr/bin/env bash
description="Validates features that have a given tag"

if [ $# -eq 2 ] && [ $1 == 'describe' ]; then
  printf "  %-0$2s - $description\n" `basename $0`
  exit 0
elif [ $# -eq 1 ] && [ $1 == '--help' ]; then
  printf "run/`basename $0` <tag>\n"
  printf "Examples:\n"
  printf "  run/`basename $0` @wip\n"
  printf "  run/`basename $0` @jira-DPBLOG-14\n"
  exit 0
fi
printf "Verifying requirements tagged with $1\n"
printf "Start at %s GMT\n" `TZ=GMT date '+%F-%T'`
bundle exec cucumber --no-profile --tags $1 --require features --format Cucumber::Formatter::Bob::Html --out output --format rerun --out rerun.txt --format 'Slowhandcuke::Formatter'
printf "Finished at %s GMT\n" `TZ=GMT date '+%F-%T'`